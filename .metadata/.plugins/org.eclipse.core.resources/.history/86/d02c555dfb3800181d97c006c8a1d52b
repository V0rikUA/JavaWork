package com.gmail.kirovdmitry;

import java.util.Arrays;

public class Main {

	public static void main(String[] args) {
		Child childOne = new Child("Alex", "Fet", 5);
		Ball ballOne = new Ball("Blue", 16);

		System.out.println(childOne.playWithSomething(ballOne));
	
		Ball ballTwo = new Ball("red", 13);
		Ball ballThee = new Ball("white", 17);
		Ball ballFour = new Ball("green", 10);
		Ball ballFive = new Ball("yelow", 5);
	
		Ball[] balls = new Ball [] { ballOne, ballTwo, ballThee, ballFour, ballFive};
		System.out.println();
	    for (Ball ball : balls) {
			System.out.println(ball);
		}
	Arrays.sort(balls);
	
	System.out.println();
	for (Ball ball : balls) {
		System.out.println(ball);
	}
	}

}
